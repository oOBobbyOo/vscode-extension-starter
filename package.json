{
  "name": "vscode-extension-starter",
  "displayName": "vscode-extension-starter",
  "type": "module",
  "version": "0.0.1",
  "description": "vscode extension starter",
  "categories": [
    "Other"
  ],
  "main": "./out/extension.cjs",
  "engines": {
    "vscode": "^1.107.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "vscode-extension-starter.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsdown src/extension.ts -o out/extension.js",
    "watch": "tsdown src/extension.ts -o out/extension.js --watch",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.39.1",
    "reactive-vscode": "^0.4.1",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  }
}
